<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/drawBtn"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="120pt"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="10pt"
        android:text="Drawing"
        />

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="120pt"
        android:layout_above="@+id/feedRSSList"
        android:text="Map"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/feedRSSList"
        android:layout_below="@+id/drawBtn"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginBottom="10pt"
        />

    <Button
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:layout_below="@+id/mapBtn"
        android:layout_alignRight="@+id/feedRSSList"
        android:id="@+id/refreshBtn"
        android:layout_marginTop="7.5pt"/>

</RelativeLayout>
